<h1>Ultimos Posts</h1>
<ul class="thumbnails" id='posts'>
  <% @posts.each do |post| %>
    <div id='post'>
      <li class="span3">
        <div class="thumbnail">
          <% if post.has_photo? %>
            <%= image_tag post.photo_path %>
          <% end %>
          <div class='caption'>
            <h3> <%= link_to post.titulo, post %></h3>
            <h5> Subido por: <%= post.usuario.username %> </h5>
          </div>
        </div>
      </li>
    </div>
  <% end %>
</ul>
<% if logged_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>