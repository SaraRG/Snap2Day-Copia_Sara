<h1>Mis Posts</h1>
<ul class="thumbnails" id='posts'>
  <% @posts.each do |post| %>
    <div id='post'>
      <li class="span3">
        <div class="thumbnail">
          <% if post.has_photo? %>
            <%= image_tag post.photo_path %>
          <% end %>
          <div class='caption'>
            <h3> <%= link_to post.titulo, post %></h3>
            <%= link_to 'Editar', edit_post_path(post) %> |
            <%= link_to 'Eliminar', post, confirm: 'Â¿Esta seguro de que desea eliminar este post?', method: :delete %>
          </div>
        </div>
      </li>
    </div>
  <% end %>
</ul>


<br/>
<%= link_to 'New Post', new_post_path %>
<%= link_to 'Atras', posts_path %>